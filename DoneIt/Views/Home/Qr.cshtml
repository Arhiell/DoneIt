@model string
@{
    <link rel="stylesheet" href="~/css/qr.css" />
    ViewData["Title"] = "Qr Code";
}

<h2>CColocar una descripcon algo que reprsente este pagian </h2>

<div class="qr-container">
    <h1><i class="fas fa-qrcode fa-fade"></i> Código QR generado</h1>
    <div class="qr-image-wrapper">
        <img src="data:image/png;base64,@Model" alt="Código QR" />
    </div>

    <a asp-controller="Home" asp-action="GenerarQR" class="btn-volver">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>
