@{
    <link rel="stylesheet" href="~/css/qr.css" />
    ViewData["Title"] = "Home Page";
}

<div class="qr-container">
    <h1><i class="fas fa-qrcode fa-bounce"></i> Generador QR</h1>

    <form method="get" asp-action="Qr" asp-controller="Qr" class="qr-form">
        <label for="texto">Texto:</label>
        <input type="text" id="texto" name="texto" placeholder="Ingresa el texto" required />
        <button type="submit">
            <i class="fas fa-magic"></i> Generar QR
        </button>
    </form>
</div>
